+      SetWindowLongPtr(hwnd, 0, (LONG_PTR)cs->lpCreateParams);
+    } break;
+
+    case WM_TIMER:
+      if (wparam == TimerID_Animate) {
+        Get(hwnd)->AnimateAll();
