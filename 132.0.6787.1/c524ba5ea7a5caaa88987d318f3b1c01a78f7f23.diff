+// Tracks processes that are not in jobs.
+struct ProcessTracker {
+  ProcessTracker(std::unique_ptr<sandbox::PolicyBase> policy,
+                 DWORD process_id,
+                 base::win::ScopedHandle process)
+      : policy(std::move(policy)),
+        process_id(process_id),
