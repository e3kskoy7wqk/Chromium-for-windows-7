+              record_state->attribute_handle, true, nullptr, ui_task_runner_);
+      gatt_services_[primary_service->GetIdentifier()] =
+          base::WrapUnique(primary_service);
+      adapter_->NotifyGattServiceAdded(primary_service);
+    }
+  }
