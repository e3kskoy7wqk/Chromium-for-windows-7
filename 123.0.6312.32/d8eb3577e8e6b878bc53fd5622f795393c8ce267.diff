+IMM32Manager::IMM32Manager()
+    : is_composing_(false),
+      input_language_id_(LANG_USER_DEFAULT),
+      system_caret_(false),
+      caret_rect_(-1, -1, 0, 0),
+      use_composition_window_(false) {
+}
